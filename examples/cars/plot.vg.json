{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "repeat": {
        "row": ["Miles_per_Gallon","Cylinders","x","Horsepower","y","Acceleration"],
        "column": ["Acceleration","y","Horsepower","x","Cylinders","Miles_per_Gallon"]
    },
    "spec": {
        "data": { "url": "./cars.json" },
        "mark": "point",
        "params": [
            {
                "name": "brush",
                "select": {
                    "type": "interval",
                    "resolve": "union",
                    "on": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
                    "translate": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
                    "zoom": "wheel![event.shiftKey]"
                }
            },
            {
                "name": "grid",
                "select": {
                    "type": "interval",
                    "resolve": "global",
                    "translate": "[mousedown[!event.shiftKey], window:mouseup] > window:mousemove!",
                    "zoom": "wheel![!event.shiftKey]"
                },
                "bind": "scales"
            }
        ],
        "encoding": {
            "x": { "field": { "repeat": "column" }, "type": "quantitative" },
            "y": {
                "field": { "repeat": "row" },
                "type": "quantitative",
                "axis": { "minExtent": 30 }
            },
            "color": {"field": "Origin", "type": "nominal"},
            "shape": {"field": "Origin", "type": "nominal"}
        }
    }
}
